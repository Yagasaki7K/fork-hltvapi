{
  "name": "hltv-api",
  "version": "3.0.3",
  "description": "API from Hltv.org",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "cover": "jest --coverage",
    "lint": "eslint --ext js,ts,tsx ./src",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest",
    "test:w": "yarn test --watch",
    "prebuild": "rimraf dist",
    "build": "tsc -p .",
    "build:w": "tsc -p . -w"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dajk/hltv-api.git"
  },
  "keywords": [
    "hltv.org",
    "api",
    "cs:go",
    "csgo",
    "Counter-Strike: Global Offensive",
    "node",
    "node.js",
    "nodejs"
  ],
  "author": {
    "email": "me@radovanhajdukovic.com",
    "name": "Radovan Hajdukovic",
    "url": "https://www.radovanhajdukovic.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dajk/hltv-api/issues"
  },
  "homepage": "https://github.com/dajk/hltv-api#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "user-agents": "^1.1.1000",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/cheerio": "^0.22.38",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/user-agents": "^1.0.3",
    "@types/xml2js": "^0.4.15",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "codecov": "^3.8.3",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.9.0",
    "husky": "^4.2.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
